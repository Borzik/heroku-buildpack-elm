#!/bin/bash

set -eo pipefail

indent() {
  sed -u 's/^/       /'
}

mkdir -p "$1" "$2"
build=$(cd "$1/" && pwd)
cache=$(cd "$2/" && pwd)
buildpack=$(cd "$(dirname $0)/.." && pwd)

ELM_VERSION=${ELM_VERSION:-0.15}
VERSION=elm-${ELM_VERSION}:spas-0.1.0.0
S3_URL=https://s3.amazonaws.com/heroku-buildpack-elm/assets/${VERSION}

mkdir -p ${cache}/bin
cd ${cache}/bin
echo "-----> Retrieving Elm binaries"
wget -q -c ${S3_URL}/elm
wget -q -c ${S3_URL}/elm-package
if grep --quiet spas ${build}/Procfile; then
   echo "-----> Retrieving Spas"
   wget -q -c ${S3_URL}/spas
fi

chmod -R a+x ${cache}/bin
PATH=${cache}/bin:$PATH

cd ${build}
elm package install --yes
elm make ${ELM_MAIN}